{% block breithbarbot_cropper_bundle_cropper_type_widget %}
    {% spaceless %}
        <div class="avatar-view" title="Outil de cropping" onclick="loadCropper(this);">
            <img class="img-responsive img-thumbnail" src="{% if form.vars.value is not null %}{{ breithbarbot_cropper_asset(form.vars.value) }}{% endif %}" alt="Image cropped">
        </div>
        {% if form.delete is defined %}
            {{ form_row(form.delete) }}
        {% endif %}
        {{ form_widget(form.full_path) }}
        {{ form_widget(form.path) }}
        {{ form_widget(form.name) }}
        {{ form_widget(form.mime_type) }}
        {{ form_widget(form.size) }}
        {% if form.vars.value is null %}
            <script>
                $(document).ready(function () {
                    $('.avatar-view img').attr('src', '/placeholder/{{ form._width.vars.value~'x'~form._height.vars.value }}');
                    DummyImage.generate();
                });
            </script>
        {% endif %}
    {% endspaceless %}
{% endblock %}
